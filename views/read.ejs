<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="./stylesheet/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-full bg-zinc-800 p-10 text-white">
        <div class="nav mb-10">
            <div>
                <a href="/">Create User</a>
            </div>
        </div>
        <h1 class="tracking-tighter text-3xl">All Users</h1>
        <div class="users flex gap-4 flex-wrap">
            <% if (users.length > 0) { %>
                <% users.forEach((user) => { %>
                    <div class="user w-72 p-4 bg-zinc-700 rounded-lg">
                        <div class="w-full h-52 bg-red-500 rounded-lg overflow-hidden">
                            <img class="w-full h-full object-cover" src="<%= user.image %>" alt="">
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
                        <h5 class="text-zinc-500"><%= user.email %></h5>
                        <div class="flex gap-4 mt-10">
                            <a class="text-red-600" href="/edit/<%= user._id %>">Edit</a>
                            <a class="text-blue-700" href="/delete/<%= user._id %>">Delete</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h3>No users found</h3>
            <% } %>
        </div>
    </div>
    <script src="./javascripts/script.js"></script>
</body>
</html>
